<%= form_with(model: micropost, local: true) do |form| %>
  <% if micropost.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(micropost.errors.count, "error") %> prohibited this micropost from being saved:</h2>

      <ul>
        <% micropost.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-group" style="margin-bottom: 20px">
    Title* <%= form.text_field :title %>
  </div>
  
  <div class="input-group" style="margin-bottom: 20px">
    Description <%= form.text_area :description %>
  </div>
  
  <div class="input-group" style="margin-bottom: 20px">
    Kind* <%= form.select :kind, options_for_select([ "bug", "enhancement", "proposal", "task" ], "bug") %>
  </div>
  
  <div class="input-group" style="margin-bottom: 20px">
    Priority* <%= form.select :priority, options_for_select([ "major", "minor", "trivial", "critical", "blocker"], "major") %>
  </div>
  
  <div class="actions" style="margin-bottom: 50px">
    Attachments <input type="file" multiple="multiple">
  </div>


  <div class="actions" style="margin-left: 1300px">
    <%= form.submit :"Create Issue" %>
    <%= link_to 'Cancel', microposts_path %>
  </div>
<% end %>