<%= form_with(model: [ @micropost, @micropost.comments.build ], local: true) do |form| %>
     <p>
       <div class="input" style="margin-left: -145px">
          <%= form.text_area :body, :placeholder => "What do you want to say?"%>
       </div>
     </p>
     
    <div class="actions">
      <%= form.submit :"Save", :class => 'save' %>
      <%= link_to 'Cancel', micropost_url(@micropost), :class => 'cancel'%>
    </div>

<% end %>