<!DOCTYPE html>
<html>
<head>
<style>
  td:hover {
    background-color:#f5f5f5;
    
  }
  table{
    border-collapse: collapse;
    width: 100%;
  }
  table thead tr th{
      border-bottom: 1px solid lightgray;
      text-align: left;
  }
  table th, table td{ /* Added padding for better layout after collapsing */
      padding: 4px 8px;
  }
</style>
</head>

<body>
  <p id="notice"><%= notice %></p>
  
  <div class="header">
    <div class="section-title">
      <h1>Issues</h1>
    </div>
    
</div>
  <%= link_to 'Create issue', new_micropost_path %>
  <input type="text" id="myInput" onkeyup="search()" placeholder="Find issues">
  
  <table id = "myTable">
    <col width="48%">
    <col width="5%">
    <col width="5%">
    <col width="8%">
    <col width="8%">
    <col width="8%">
    <col width="8%">
    <col width="8%">
    <col width="2%">
    <thead >
      <tr>
        <th>Title</th>
        <th >T</th>
        <th >P</th>
        <th>Status</th>
        <th >Votes</th>
        <th >Assignee</th>
        <th> Created</th>
        <th >Updated</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @microposts.each do |micropost| %>
        <tr>
          <td><%= link_to micropost.title, micropost %></td>
          <td><%= link_to micropost.type_issue, microposts_url(type_issue: micropost.type_issue), class:"btn-link" %></td>
          <td onclick="filterPriority"><%= link_to micropost.priority, class:"btn-link" %></td>
          <td><%= "Status" %></td>
          <td><%= "Votes" %></td>
          <td><%= "Asignee" %></td>
          <td><%= time_ago_in_words(micropost.created_at) + " ago" %></td>
          <td><%= time_ago_in_words(micropost.updated_at) + " ago" %></td>
          <% if false %>
            <td><%= link_to 'Show', micropost %></td>
            <td><%= link_to 'Edit', edit_micropost_path(micropost) %></td>
            <td><%= link_to 'Delete', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <script>
    function search() {
      var input, filter, table, tr, td, i, txtValue;
      input = document.getElementById("myInput");
      filter = input.value.toUpperCase();
      table = document.getElementById("myTable");
      tr = table.getElementsByTagName("tr");
      for (i = 0; i < tr.length; i++) {
        td = tr[i].getElementsByTagName("td")[0];
        if (td) {
          txtValue = td.textContent || td.innerText;
          if (txtValue.toUpperCase().indexOf(filter) > -1) {
            tr[i].style.display = "";
          } else {
            tr[i].style.display = "none";
          }
        }       
      }
    }
    
    function filterPriority() {
      var table, tr, td, i, txtValue;
      table = document.getElementById("myTable");
      tr = table.getElementsByTagName("tr");
      for (i = 0; i < tr.length; i++) {
        td = tr[i].getElementsByTagName("td")[2];
        if (td) {
          txtValue = td.textContent || td.innerText;
          if (txtValue.toUpperCase() == "MAJOR") {
            tr[i].style.display = "";
          } else {
            tr[i].style.display = "none";
          }
        }       
      }
    }
  </script>
</body>
